<!-- Thêm script để khởi tạo Timeline mà không cần ES modules -->
<script src="/js/videoEditor/timeline.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        console.log("Đang khởi tạo Timeline...");
        
        try {
            // Đảm bảo window.Timeline đã được định nghĩa
            if (typeof window.Timeline !== 'function') {
                console.error("Timeline class không được tìm thấy! Kiểm tra script đã được tải chưa.");
                return;
            }
            
            // Khởi tạo timeline
            window.videoTimeline = new Timeline({
                containerId: 'timeline-container', 
                duration: 30,
                pixelsPerSecond: 100,
                onTimeUpdate: function(time) {
                    console.log(`Timeline: thời gian hiện tại = ${time}s`);
                }
            });
            
            console.log("Timeline đã được khởi tạo thành công!");
        } catch (error) {
            console.error("Lỗi khi khởi tạo Timeline:", error);
        }
    });
    
    // Xử lý lỗi chung
    window.addEventListener('error', function(e) {
        console.error("Có lỗi xảy ra:", e.error || e.message);
    });
</script>