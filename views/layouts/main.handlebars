<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đồ án KTPM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        .account-frame {
            background-color: #FFC107;
            /* Màu vàng cho khung */
            padding: 5px 10px;
            /* Khoảng cách trong khung */
            border-radius: 5px;
            /* Bo góc nhẹ */
            display: inline-flex;
            /* Kích thước vừa đủ nội dung */
            align-items: center;
            /* Căn giữa icon và text */
            color: #F49D25 !important;
            /* Màu chữ */
            text-decoration: none;
            transition: background-color 0.3s, color 0.3s;
        }

        .account-frame .nav-link {
            color: rgb(255, 255, 255) !important;
            /* Màu chữ trong khung */
            padding: 0;
            /* Loại bỏ padding mặc định */
            display: flex;
            /* Đảm bảo icon và text nằm trên cùng hàng */
            align-items: center;
            /* Căn giữa */
            width: 100%;
            /* Đảm bảo toàn bộ khu vực nhấp được */
        }

        .account-frame:hover {
            color: #c61010 !important;
            background-color: #e6b213;
            /* Hiệu ứng hover nhẹ hơn */
        }

        .account-frame i {
            color: inherit;
            /* Cho icon ăn theo màu chữ */
        }

        .account-frame span {
            color: inherit;
        }

        .account-frame::after {
            margin-left: 5px;
        }

        /* Dropdown */
        .navbar-nav .dropdown-menu {
            min-width: auto;
        }

        .text-brand-orange {
            color: #F49D25 !important;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg shadow-sm" style="background-color: #101115;">
        <div class="container">
            <a class="navbar-brand fw-bold text-brand-orange" href="/dashboard">AI Short Video</a>

            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center account-frame" href="#"
                            role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle fs-5 me-1"></i>
                            {{#if user}}
                            <span class="fw-semibold">{{splitEmail user.email}}</span>
                            {{else}}
                            <span>Tài khoản</span>
                            {{/if}}
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end animate__animated animate__fadeIn">
                            {{#if user}}
                            <li><span class="dropdown-item-text fw-bold">Xin chào, {{splitEmail user.email}}</span></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="/account">
                                    <i class="bi bi-person me-2"></i> Tài khoản
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item text-danger d-flex align-items-center" href="/logout">
                                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                                </a>
                            </li>
                            {{else}}
                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="/login">
                                    <i class="bi bi-box-arrow-in-right me-2"></i> Login
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="/register">
                                    <i class="bi bi-pencil-square me-2"></i> Register
                                </a>
                            </li>
                            {{/if}}
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    {{{body}}}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        Handlebars.registerHelper('splitEmail', function(email) {
            if (email) {
                return email.split('@')[0];
            }
            return 'Tài khoản';
        });
    </script>
</body>

</html>