        if (data.success) {
          // Hi·ªÉn th·ªã k·ªãch b·∫£n v√† th√¥ng tin v·ªÅ model ƒë√£ s·ª≠ d·ª•ng
          const modelName = data.model === 'flash' ? 'Gemini 2.5 Flash' : 'Gemini 2.5 Pro';
          scriptContent.textContent = data.script;
          
          // C·∫≠p nh·∫≠t header script ƒë·ªÉ hi·ªÉn th·ªã model ƒë√£ d√πng
          const scriptHeader = scriptContainer.querySelector('.card-header span');
          if (scriptHeader) {
            scriptHeader.textContent = `ü§ñ K·ªãch b·∫£n AI (${modelName})`;
          }
          
          scriptContainer.classList.remove('d-none');
          if (generateVideoWrapper) generateVideoWrapper.style.display = 'block';
          
          // Cu·ªôn ƒë·∫øn k·∫øt qu·∫£
          scriptContainer.scrollIntoView({ behavior: 'smooth' });
        } else {
          alert('L·ªói: ' + (data.error || 'Kh√¥ng th·ªÉ t·∫°o k·ªãch b·∫£n'));
        }
      })
      .catch(error => {
        if (loadingSpinner) loadingSpinner.classList.add('d-none');
        alert('L·ªói: ' + error.message);
      });
