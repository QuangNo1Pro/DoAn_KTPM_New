    // H√†m x·ª≠ l√Ω sinh k·ªãch b·∫£n v·ªõi model c·ª• th·ªÉ
    function generateScriptWithModel(buttonElement, modelDefault) {
      const keyword = buttonElement.querySelector('span').innerText;
      const aiModelInput = document.getElementById('aiModelInput');
      const modelType = aiModelInput?.value || modelDefault || 'pro';
      
      console.log('Sinh k·ªãch b·∫£n v·ªõi t·ª´ kh√≥a:', keyword, 'v√† model:', modelType);
      
      // Hi·ªÉn th·ªã spinner
