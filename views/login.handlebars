<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, input-scale=1.0">
    <title>AI Short Video Platform - Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
        integrity="sha512-pw1yR6gpE6fF7ZK+6rUv7uK6P+PscLE0dO5kYlLrR7vX+0o7GkY+e5r+K8uB93FqXkfwkF2gI5B1lS4oK/2xUg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            background-color: #0F1419;
            min-height: 100vh;
            position: relative;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            /* Remove default margin to ensure full coverage */
        }

        #bg-video {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            /* Match the viewport width */
            height: auto;
            /* Maintain aspect ratio */
            object-fit: contain;
            /* Ensure full video is visible without cropping */
            z-index: -1;
            /* Place video behind all content */
            opacity: 0.5;
            /* Adjust for readability */
            pointer-events: none;
            /* Prevent interaction with video */
        }

        .vh-100 {
            position: relative;
            /* Ensure section content stays above video */
            z-index: 1;
            /* Place content above video */
        }

        .password-toggle-icon {
            padding: 0 10px;
            /* Adjust padding inside the icon container */
            background-color: #e9ecef;
            /* Match the input background */
            border: 1px solid #ced4da;
            /* Match the input border */
        }

        .input-group .form-control {
            flex: 1;
            /* Ensure input takes available space */
        }

        .input-group-text {
            padding: 0.375rem 0.75rem;
            /* Match Bootstrap input padding */
        }

        .login-label {
            color: #1D9BF0;
            /* Blue color matching the design */
            font-weight: bold;
            font-size: 2rem;
            /* Increased for prominence */
            text-align: center;
            margin-bottom: 20px;
            /* Space below the label */
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
            /* Shadow for depth */
            animation: pulse 1.5s infinite ease-in-out;
            /* Subtle pulsing effect */
        }

        /* Enhance label visibility */
        .form-label {
            color: #FFFFFF;
            /* Bright white for contrast */
            font-size: 1.2rem;
            /* Larger size */
            font-weight: bold;
            /* Bold for emphasis */
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
            /* Subtle shadow for readability */
        }

        /* Enhance divider text */
        .divider p {
            color: #FFFFFF;
            /* Bright white */
            font-size: 1.1rem;
            /* Slightly larger */
            font-weight: bold;
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
            /* Subtle shadow */
        }

        /* Enhance registration text and link */
        .text-center.mt-3 p {
            color: #FFFFFF;
            /* Bright white */
            font-size: 1rem;
            /* Slightly larger */
            font-weight: bold;
        }

        .text-center.mt-3 a {
            color: #1D9BF0;
            /* Blue for link */
            font-weight: bold;
            text-decoration: underline;
            /* Underline for clarity */
        }

        .text-center.mt-3 a:hover {
            color: #06B6D4;
            /* Lighter blue on hover */
        }

        footer {
            background-color: #000;
            /* Dark background */
            color: #FBBF24;
            /* Yellowish color for contrast */
            padding: 15px 0;
            width: 100%;
            z-index: 2;
            /* Ensure it’s above the video */
        }

        /* Rounder corners for input fields */
        .form-control {
            border-radius: 10px;
            /* Increased from default 0.25rem (4px) */
        }

        .input-group-text {
            border-radius: 0 10px 10px 0;
            /* Match the input's right corners, keep left flat */
        }
    </style>
</head>

<body>
    <!-- Video background -->
    <video autoplay muted loop id="bg-video">
        <source src="/video_background/lofi.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <div class="d-flex flex-column min-vh-100">
        <section class="vh-100 flex-grow-1">
            <div class="container py-5 h-100">
                <div class="row d-flex align-items-center justify-content-center h-100">
                    {{!-- <div class="col-md-8 col-lg-7 col-xl-6">
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                            class="img-fluid" alt="Phone image">
                    </div> --}}
                    <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                        {{#if message}}
                        <div class="alert alert-danger" role="alert">
                            {{message}}
                        </div>
                        {{/if}}

                        {{#if messages.error}}
                        <div class="alert alert-danger" role="alert">
                            {{messages.error}}
                        </div>
                        {{/if}}

                        <form action="/login" method="POST">
                            <!-- Login Label -->
                            <div class="login-label">Đăng nhập</div>

                            <!-- Email input -->
                            <div data-mdb-input-init class="form-outline mb-4">
                                <label class="form-label" for="form1Example13">Email address</label>
                                <input type="email" id="form1Example13" name="email"
                                    class="form-control form-control-lg" placeholder="VD: Tendangnhap@gmail.com"
                                    required />
                            </div>

                            <!-- Password input with show/hide toggle inside the field -->
                            <div data-mdb-input-init class="form-outline mb-4 position-relative">
                                <label class="form-label" for="form1Example23">Password</label>
                                <div class="input-group">
                                    <input type="password" id="form1Example23" name="password"
                                        class="form-control form-control-lg" placeholder="Enter Password" required
                                        style="border-top-right-radius: 0; border-bottom-right-radius: 0;" />
                                    <span class="input-group-text password-toggle-icon"
                                        style="cursor: pointer; border-left: 0; border-top-left-radius: 0; border-bottom-left-radius: 0;">
                                        <i class="fas fa-eye"></i>
                                    </span>
                                </div>
                            </div>

                            <!-- Submit button -->
                            <button type="submit" data-mdb-button-init data-mdb-ripple-init
                                class="btn btn-primary btn-lg btn-block">Sign in</button>
                        </form>

                        <!-- Divider -->
                        <div class="divider d-flex align-items-center my-4">
                            <p class="text-center fw-bold mx-3 mb-0">Hoặc</p>
                        </div>

                        <!-- Google Sign-In Button -->
                        <a href="/google" class="btn btn-danger btn-lg btn-block">
                            <i class="fab fa-google me-2"></i> Đăng nhập bằng Google
                        </a>

                        <div class="text-center mt-3">
                            <p>Chưa có tài khoản? <a href="/register">Đăng ký ngay</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <footer class="text-center mt-auto">
            © 2025 AI ShortVideo. All rights reserved.
        </footer>
    </div>

    <!-- JavaScript for password toggle -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const togglePassword = document.querySelector('.password-toggle-icon i');
            const passwordInput = document.querySelector('#form1Example23');

            togglePassword.addEventListener('click', function () {
                // Toggle the input type
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);

                // Toggle the eye icon
                this.classList.toggle('fa-eye');
                this.classList.toggle('fa-eye-slash');
            });
        });
    </script>
</body>

</html>